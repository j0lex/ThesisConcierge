<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.thesisconcierge.ui.roomSearch.HomeFragment"
        android:label="Room search"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.thesisconcierge.ui.professorSearch.DashboardFragment"
        android:label="Professor search"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.thesisconcierge.ui.lectureSearch.NotificationsFragment"
        android:label="Lecture search"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_rate_service"
        android:name="com.example.thesisconcierge.ui.rateService.RateServiceFragment"
        android:label="Rate my service"
        tools:layout="@layout/fragment_rate_service" />
</navigation>